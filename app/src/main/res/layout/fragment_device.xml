<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="master.activity.MainActivity">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >

            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">


                <TableRow android:gravity="start"
                          android:background="@color/device_color">

                    <TextView
                            android:text="@string/feature_name"
                            style="@style/txtFeatureName"/>

                    <TextView
                            android:text="@string/feature_status"
                            style="@style/txtFeatureName"/>

                </TableRow>


                <TableRow android:gravity="start"
                          android:background="@color/colorWhite">

                    <TextView
                            android:text="@string/device_name"
                            style="@style/txtfeatureNameStyle"/>

                    <TextView
                            android:id="@+id/txt_dvice_info"
                            style="@style/txtfeatureStyle"/>

                </TableRow>


                <TableRow android:gravity="start"
                          android:background="@color/device_color">

                    <TextView
                            android:text="@string/device_model"

                            style="@style/txtfeatureNameStyle"/>

                    <TextView
                            android:id="@+id/txt_model"
                            style="@style/txtfeatureStyle"/>

                </TableRow>


                <TableRow android:gravity="start"
                          android:background="@color/colorWhite">

                    <TextView
                            android:text="@string/device_manufacturer"
                            style="@style/txtfeatureNameStyle"/>

                    <TextView
                            android:id="@+id/txt_manufacutrer"
                            style="@style/txtfeatureStyle"/>

                </TableRow>



                <TableRow android:gravity="start"
                          android:background="@color/device_color">

                    <TextView
                            android:text="@string/device_devices"
                            style="@style/txtfeatureNameStyle"/>

                    <TextView
                            android:id="@+id/txtDevice"
                            style="@style/txtfeatureStyle"/>

                </TableRow>


                <TableRow android:gravity="start"
                          android:background="@color/colorWhite">

                    <TextView
                            android:text="@string/hardware"
                            style="@style/txtfeatureNameStyle"/>

                    <TextView
                            android:id="@+id/txt_hardware"
                            style="@style/txtfeatureStyle"/>

                </TableRow>


                <TableRow android:gravity="start"
                          android:background="@color/device_color">

                    <TextView
                            android:text="@string/device_board"
                            style="@style/txtfeatureNameStyle"/>

                    <TextView
                            android:id="@+id/txt_device_board"
                            style="@style/txtfeatureStyle"/>

                </TableRow>




                <TableRow android:gravity="start"
                          android:background="@color/colorWhite">

                    <TextView
                            android:text="@string/android_id"
                            style="@style/txtfeatureNameStyle"/>

                    <TextView
                            android:id="@+id/txt_android_id"
                            style="@style/txtfeatureStyle"/>

                </TableRow>

















            </TableLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
