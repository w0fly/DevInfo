<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent" android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:elevation="@dimen/padding_margin_5dp"
            app:cardCornerRadius="@dimen/padding_margin_5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/height_width_10dp">


            <ImageView
                    android:layout_width="@dimen/height_width_60dp"
                    android:layout_height="@dimen/padding_margin_80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/height_width_10dp"
                    android:src="@drawable/ic_user"
                    android:tint="@color/colorPrimary"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_width_10dp"
                    android:layout_marginRight="@dimen/height_width_10dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/txt_user_apps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_25sp"

                        style="@style/textViewLarge"/>


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/user_apps"
                        android:layout_marginBottom="@dimen/height_width_10dp"
                        style="@style/textViewSimpleMediam"/>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:elevation="@dimen/padding_margin_5dp"
            app:cardCornerRadius="@dimen/padding_margin_5dp"
            app:cardUseCompatPadding="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/height_width_10dp">


            <ImageView
                    android:layout_width="@dimen/height_width_60dp"
                    android:layout_height="@dimen/padding_margin_80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/height_width_10dp"
                    android:src="@drawable/ic_solar_system"
                    android:tint="@color/colorPrimary"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_width_10dp"
                    android:layout_marginRight="@dimen/height_width_10dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/txt_syetem_apps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_25sp"

                        style="@style/textViewLarge"/>


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/system_apps"
                        android:layout_marginBottom="@dimen/height_width_10dp"
                        style="@style/textViewSimpleMediam"/>


            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>