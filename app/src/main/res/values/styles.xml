<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="OSTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2633bf</item>
        <item name="colorPrimaryDark">#131a60</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ProcessorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#5212b8</item>
        <item name="colorPrimaryDark">#3a0d82</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">#5212b8</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressUtil" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BatteryTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#4f7504</item>
        <item name="colorPrimaryDark">#3f5d03</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">#4f7504</item>

    </style>

    <style name="SensorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#910055</item>
        <item name="colorPrimaryDark">#570033</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NetworkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#037e87</item>
        <item name="colorPrimaryDark">#025a61</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SimTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#12a127</item>
        <item name="colorPrimaryDark">#0c701b</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CameraTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#044463</item>
        <item name="colorPrimaryDark">#022f45</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StorageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#c73232</item>
        <item name="colorPrimaryDark">#9f2828</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="BluetoothTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#0A3C91</item>
        <item name="colorPrimaryDark">#072a65</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DisplayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3d3254</item>
        <item name="colorPrimaryDark">#2a233a</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FeaturesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#593300</item>
        <item name="colorPrimaryDark">#321d00</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UserAppsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#04a8ba</item>
        <item name="colorPrimaryDark">#037480</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

     <style name="AboutUsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#402628</item>
        <item name="colorPrimaryDark">#301C1D</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="textViewLarge">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/lato_black</item>
    </style>


    <style name="textViewSimpleMediam">
        <item name="android:textColor">@color/colorFont</item>
        <item name="android:textSize">@dimen/small_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_black</item>

    </style>


    <style name="txtfeatureNameStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/small_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:maxLines">4</item>
        <item name="android:padding">@dimen/height_width_10dp</item>

    </style>


    <style name="txtfeatureStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.2</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/small_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:maxEms">5</item>
        <item name="android:maxLines">4</item>
        <item name="android:padding">@dimen/height_width_10dp</item>

    </style>

    <style name="txtFeatureName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/small_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:maxLines">4</item>
        <item name="android:paddingLeft">@dimen/height_width_10dp</item>
        <item name="android:paddingRight">@dimen/height_width_10dp</item>
        <item name="android:paddingTop">@dimen/height_width_15dp</item>
        <item name="android:paddingBottom">@dimen/height_width_15dp</item>

    </style>
    <style name="txtFeatureStatus">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.2</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/small_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:maxLines">4</item>
        <item name="android:padding">@dimen/height_width_10dp</item>

    </style>







</resources>
